<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
            android:bottom="6dp"
            android:left="6dp"
            android:right="6dp"
            android:top="6dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
            android:left="-2dp"
            android:right="-2dp"
            android:top="-2dp"

            >

        <shape>
            <solid android:color="@android:color/transparent" />
