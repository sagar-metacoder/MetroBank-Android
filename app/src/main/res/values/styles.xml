        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_input_detail</item>
        <item name="android:paddingBottom">@dimen/margin_15</item>
        <item name="android:paddingTop">@dimen/margin_20</item>
        <item name="android:paddingStart">@dimen/margin_5</item>
        <item name="android:paddingEnd">@dimen/margin_5</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
