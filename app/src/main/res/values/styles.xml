    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:textColorPrimaryInverse">#FFF
        </item> <!-- header date, month color && calendar text highlight color -->
        <item name="android:textColorSecondaryInverse">#FFF</item> <!-- header year color -->

        <item name="android:colorAccent">@color/colorPrimaryDark</item> <!-- button color -->

    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary
        </item> <!-- header background color -->
    </style>

    <style name="AppButton.Colored.Green" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/app_background</item>
        <item name="android:textSize">@dimen/font_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:minEms">5</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BottomNavigationView.InActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

