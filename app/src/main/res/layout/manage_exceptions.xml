<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exception_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_50"
                    android:textSize="@dimen/font_exception_title"
                    android:drawableStart="@mipmap/ic_alert"
                    android:drawablePadding="@dimen/margin_20"
            />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exception_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite50"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_30"
                    android:textSize="@dimen/font_exception_message"
                    android:layout_below="@+id/tv_exception_title"
            />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/iv_logo">

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_retry"
                        style="@style/AppButton.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/a_btn_retry"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:padding="@dimen/margin_30"
                        android:textSize="@dimen/font_label"
                        android:background="?selectableItemBackground"
                        android:text="@string/a_btn_cancel"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>