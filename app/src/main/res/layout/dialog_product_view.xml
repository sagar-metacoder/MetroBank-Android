<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
>

    <data>
        <import type="com.ng.printtag.apputils.Constant"/>
        <import type="com.ng.printtag.apputils.Utils"/>
        <import type="com.ng.printtag.apputils.AppUtils"/>
        <import type="android.view.View"/>
        <variable name="model"
                  type="com.ng.printtag.models.newrequests.AddProductModel"/>
    </data>

    <LinearLayout
            android:id="@+id/li_view_product"
            android:background="@drawable/bg_view_product"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content"

    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingStart="@dimen/margin_20"
                      android:paddingEnd="@dimen/margin_20"
                      android:paddingTop="@dimen/margin_10"
                      android:paddingBottom="@dimen/margin_5"
                      android:baselineAligned="false">


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10" tools:ignore="RtlHardcoded"
                    android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/AppTextView.Title.Small"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@string/a_lbl_upc_number'
                        android:textAllCaps="true"
                        android:textSize="@dimen/font_16"
                />
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/upcNumber"
                        style="@style/AppTextView.List.Item"
                        android:textSize="@dimen/font_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                />


                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/AppTextView.Title.Small"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@string/a_lbl_description'
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textSize="@dimen/font_16"
                />
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/upcName"
                        style="@style/AppTextView.List.Item"
                        android:textSize="@dimen/font_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10" tools:ignore="RtlHardcoded"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_10">

                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/AppTextView.Title.Small"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@string/a_lbl_quantity'
                        android:textAllCaps="true"
                        android:textSize="@dimen/font_16"
                />
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/upcQty"
                        style="@style/AppTextView.List.Item"
                        android:textSize="@dimen/font_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"/>

            </LinearLayout>


        </LinearLayout>
        <ImageView
                android:id="@+id/image_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingStart="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_35"
                tools:ignore="RtlSymmetry"/>


    </LinearLayout>
</layout>