<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
>

    <data>
        <import type="com.ng.printtag.apputils.Constant"/>
        <import type="com.ng.printtag.apputils.Utils"/>
        <import type="com.ng.printtag.apputils.AppUtils"/>
        <import type="android.view.View"/>
        <variable name="model"
                  type="com.ng.printtag.models.newrequests.AddProductModel"/>


    </data>

    <RelativeLayout android:id="@+id/linear_row"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:fitsSystemWindows="true"
                    android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" tools:ignore="UselessParent">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"

                          android:paddingTop="@dimen/margin_5"
                          android:paddingBottom="@dimen/margin_5" android:baselineAligned="false">


                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.7"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10" tools:ignore="RtlHardcoded"
                        android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/AppTextView.Title.Small"
                            android:singleLine="false"
                            android:maxLines="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='@string/a_lbl_upc_number'
                            android:textAllCaps="true"
                    />
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/AppTextView.List.Item"
                            android:textSize="@dimen/font_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:gravity="center_vertical"
                            android:text='@{model.upcNumber.length() !=0?model.upcNumber:@string/a_lbl_unknown}'/>



                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10" tools:ignore="RtlHardcoded"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/margin_10">

                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/AppTextView.Title.Small"
                            android:singleLine="false"
                            android:maxLines="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='@string/a_lbl_quantity'
                            android:layout_gravity="center"
                            android:textAllCaps="true"
                    />
                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_qty"
                            style="@style/AppTextView.List.Item"
                            android:textSize="@dimen/font_label"
                            android:layout_width="@dimen/margin_70"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:background="@drawable/edittext_border"
                            android:text='@{model.qty.length() !=0?model.qty:@string/a_lbl_unknown}'/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="end"
                        android:layout_marginTop="@dimen/margin_10" tools:ignore="RtlHardcoded"
                        android:orientation="vertical">

                    <ImageView android:id="@+id/img_delete"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@mipmap/ic_delete"
                               android:padding="@dimen/margin_10"
                               tools:ignore="ContentDescription"/>

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppTextView.List.Item"
                    android:textSize="@dimen/font_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:singleLine="false"
                    android:text='@{model.upcName.length() !=0?model.upcName:@string/a_lbl_unknown}'/>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/color_D9D9DA"/>

        </LinearLayout>


    </RelativeLayout>
</layout>