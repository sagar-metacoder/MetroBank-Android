<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/bg_dialog_margin">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="0dp"
                app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_30"
                    android:paddingBottom="@dimen/margin_30"

                    android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AppTextView.Dialog.Title"
                        android:paddingStart="@dimen/margin_30"
                        android:paddingEnd="@dimen/margin_30"
                />
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_list"
                        android:paddingEnd="@dimen/margin_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_200"
                        android:layout_marginTop="@dimen/margin_30"
                        bind:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:ignore="RtlSymmetry"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_4"
                        android:paddingEnd="@dimen/margin_4"
                        android:layout_marginTop="@dimen/margin_button_top_vertical">


                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_done"
                            style="@style/AppButton.Colored.Green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:padding="@dimen/margin_10"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:text="@string/a_btn_done"/>
                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>